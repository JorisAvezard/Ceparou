<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity"
    android:clickable="false">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Informations personnelles"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="right"
            android:textSize="20dp"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Une première information"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/textView_info_1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Affichage de la première information"
            android:textStyle="bold"
            android:gravity="left"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Encore une autre "
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />
        <TextView
            android:id="@+id/textView_info_2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Affichage d'une autre information"
            android:textStyle="bold"
            android:gravity="left"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Sécurité"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="right"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Votre e-mail "
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />
            <TextView
                android:id="@+id/textView_mail"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="récupérer et écrire le mail"
                android:textStyle="bold"
                android:gravity="left"
                />
            <Button
                android:id="@+id/bouton_page_modification_mail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:text="Modifier mon e-mail"
                android:textSize="10dp"
                android:textStyle="italic"
                />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="N° téléphone pour récupération mdp"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />

        <TextView
            android:id="@+id/textView_num"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="récupérer et écrire le n°"
            android:textStyle="bold"
            android:gravity="left"
            />
        <Button
            android:id="@+id/bouton_page_modification_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier mon N°"
            android:layout_gravity="right"
            android:textSize="10dp"
            android:textStyle="italic"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Mot de passe"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />
        <Button
            android:id="@+id/bouton_page_modification_mdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Modifier mon MDP"
            android:layout_gravity="right"
            android:textSize="10dp"
            android:textStyle="italic"
            />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Options"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="right"
            android:textSize="20dp"
            />
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Autoriser l'utilisation de mes informations personnelles"
            android:textStyle="bold"
            android:textColor="#1a2094"
            android:gravity="left"
            />
        <RadioGroup
            android:id="@+id/radio_utilisation_infos_perso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checkedButton="@+id/radio_utilisation_infos_perso_val_1"
            android:orientation="horizontal"
            >
            <RadioButton
                android:id="@+id/radio_utilisation_infos_perso_val_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Oui"
                />
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  (t'avais qu'à lire les petites lignes)"
                android:textStyle=""
                android:gravity="left"
                android:textSize="7sp"
                />
        </RadioGroup>

        <TextView
            android:id="@+id/textView_suppression_compte"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Options de compte"
            android:textStyle="bold"
            android:gravity="left"
            />
        <Button
            android:id="@+id/bouton_suppression_compte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Supprimer mon compte"
            android:layout_gravity="right"
            android:textSize="10dp"
            android:textStyle="italic"
            />
        <Button
            android:id="@+id/bouton_page_moteur_from_parametres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_gravity="right"
            android:textSize="10dp"
            android:textStyle="italic"
            android:background="@mipmap/retour"
            />

    </LinearLayout>

</ScrollView>